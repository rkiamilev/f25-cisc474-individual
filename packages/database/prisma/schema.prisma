generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// The underlying table does not contain a valid unique identifier and can therefore currently not be handled by Prisma Client.
model User {
  id            BigInt    @id @default(autoincrement())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  role          String    @default("student")

}

model Article {
  id          BigInt    @id @default(autoincrement())  // ← Add @id here
  title       String
  content     String
  difficulty  String
  wordCount   Int
  readingTime Int
  source      String?
  publishedAt DateTime?
  createdAt   DateTime  @default(now())

  @@map("articles")
  // Remove @@ignore since we now have a valid primary key
}

model Word {
  id             BigInt   @id @default(autoincrement())  // ← Add @id here
  word           String   @unique
  translation    String
  definition     String
  partOfSpeech   String
  frequency      Int
  examples       String[]
  pronunciation  String?
  id_backup_text String?

  @@map("words")
}
